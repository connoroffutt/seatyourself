

<h1 class="rest-page-name"> <%= @restaurant.name %> - <%= @restaurant.cuisine %> </h1>


<% if current_user %>
  <%= link_to "New Reservation", restaurant_reservation_index_path(@restaurant) %>
<% else %>
    <p>Please <%= link_to "log in", new_session_path %> to make a reservation. </p>
<% end %>

<p class="rest-page-image"> <%= link_to image_tag(@restaurant.image) %> </p>

<h2 class="rest-page-description"><%= @restaurant.location %></h2>
