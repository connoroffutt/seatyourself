<!DOCTYPE html>
<html>
  <head>
    <title>SeatYourself</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="banner">
    <a href="/restaurant" style="text-decoration: none">
      <h1 class="banner-text"> SeatYourself </h1>
    </a>
  </header>
  <body>
   <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   <% if flash[:alert] %>
     <p id="alert">
       <%= flash[:alert] %>
     </p>
    <% end %>
    <%= yield %>
    <p class="userinfo">
     <% if current_user %>
       Signed in as <%= current_user.username %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
     <% else %>
       <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
     <% end %>
   </p>
  </body>

</html>
